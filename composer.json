{
    "name": "kamizuru/kizami",
    "description": "Time tracking web application",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.4",
        "doctrine/dbal": "^4.0",
        "doctrine/migrations": "^3.9",
        "doctrine/orm": "^3.6",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.1",
        "php-di/slim-bridge": "^3.4",
        "slim/csrf": "^1.5",
        "slim/psr7": "^1.8",
        "slim/slim": "^4.15",
        "slim/twig-view": "^3.4",
        "symfony/cache": "^8.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.66",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "stan": "phpstan analyse",
        "check": [
            "@cs:check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
