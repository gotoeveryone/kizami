{% extends "layout/base.html.twig" %}

{% block title %}Kizami - クライアント編集{% endblock %}

{% block body %}
    <h1>クライアント編集</h1>
    <p>
        <a href="/clients">クライアント管理へ戻る</a> /
        <a href="/">稼働時間画面へ</a> /
        <a href="/work-categories">作業分類管理へ</a>
    </p>

    {% if errors %}
        {% for error in errors %}
            <article>{{ error }}</article>
        {% endfor %}
    {% endif %}

    <form method="post" action="/clients/{{ client.id }}">
        <div>
            <label for="name">クライアント名</label>
            <input id="name" type="text" name="name" value="{{ client.name }}" required>
        </div>
        <div>
            <label for="sort_order">表示順</label>
            <input id="sort_order" type="number" name="sort_order" value="{{ client.sort_order }}" required>
        </div>
        <button type="submit">更新</button>
    </form>
{% endblock %}
