{% extends "layout/base.html.twig" %}

{% block title %}Kizami - クライアント管理{% endblock %}

{% block body %}
    <h1>クライアント管理</h1>
    <p><a href="/">稼働時間画面へ戻る</a></p>

    {% if saved %}
        <p>保存しました。</p>
    {% endif %}
    {% if updated %}
        <p>更新しました。</p>
    {% endif %}
    {% if deleted %}
        <p>削除しました。</p>
    {% endif %}

    {% if errors %}
        <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h2>新規追加</h2>
    <form method="post" action="/clients">
        <div>
            <label for="name">クライアント名</label>
            <input id="name" type="text" name="name" value="{{ old.name }}" required>
        </div>
        <div>
            <label for="sort_order">表示順</label>
            <input id="sort_order" type="number" name="sort_order" value="{{ old.sort_order }}" required>
        </div>
        <button type="submit">追加</button>
    </form>

    <h2>一覧</h2>
    {% if clients %}
        <table border="1" cellpadding="6">
            <thead>
            <tr>
                <th>ID</th>
                <th>クライアント名</th>
                <th>表示順</th>
                <th>作成</th>
                <th>更新</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.name }}</td>
                    <td>{{ client.sort_order }}</td>
                    <td>{{ client.created }}</td>
                    <td>{{ client.modified }}</td>
                    <td>
                        <a href="/clients/{{ client.id }}/edit">編集</a>
                        <form method="post" action="/clients/{{ client.id }}/delete">
                            <button type="submit" onclick="return confirm('削除しますか？');">削除</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>クライアントはまだありません。</p>
    {% endif %}
{% endblock %}
