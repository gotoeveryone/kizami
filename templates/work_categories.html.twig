{% extends "layout/base.html.twig" %}

{% block title %}Kizami - 作業分類管理{% endblock %}

{% block body %}
    <h1>作業分類管理</h1>
    <p><a href="/">稼働時間画面へ戻る</a></p>
    <form method="post" action="/logout">
        <button type="submit">ログアウト</button>
    </form>

    {% if saved %}
        <article>保存しました。</article>
    {% endif %}
    {% if updated %}
        <article>更新しました。</article>
    {% endif %}
    {% if deleted %}
        <article>削除しました。</article>
    {% endif %}

    {% if errors %}
        {% for error in errors %}
            <article>{{ error }}</article>
        {% endfor %}
    {% endif %}

    <h2>新規追加</h2>
    <form method="post" action="/work-categories">
        <label for="name">作業分類名</label>
        <input id="name" type="text" name="name" value="{{ old.name }}" required>

        <label for="sort_order">表示順</label>
        <input id="sort_order" type="number" name="sort_order" value="{{ old.sort_order }}" required>

        <button type="submit">追加</button>
    </form>

    <h2>一覧</h2>
    {% if workCategories %}
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>作業分類名</th>
                <th>表示順</th>
                <th>作成</th>
                <th>更新</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {% for workCategory in workCategories %}
                <tr>
                    <td>{{ workCategory.id }}</td>
                    <td>{{ workCategory.name }}</td>
                    <td>{{ workCategory.sort_order }}</td>
                    <td>{{ workCategory.created }}</td>
                    <td>{{ workCategory.modified }}</td>
                    <td>
                        <a href="/work-categories/{{ workCategory.id }}/edit">編集</a>
                        <form method="post" action="/work-categories/{{ workCategory.id }}/delete">
                            <button type="submit" onclick="return confirm('削除しますか？');">削除</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>作業分類はまだありません。</p>
    {% endif %}
{% endblock %}
